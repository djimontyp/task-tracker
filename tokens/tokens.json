{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Pulse Radar Design Tokens - DTCG Format",
  "$version": "1.0.0",

  "color": {
    "$type": "color",

    "primary": {
      "DEFAULT": { "$value": "hsl(24.6 95% 53.1%)", "$description": "Primary brand color - orange" },
      "foreground": { "$value": "hsl(0 0% 0%)", "$description": "Text on primary background" },
      "light": { "$value": "hsl(24.6 95% 53.1% / 0.1)", "$description": "Primary with 10% opacity" }
    },

    "secondary": {
      "DEFAULT": { "$value": "hsl(60 4.8% 95.9%)", "$description": "Secondary background color" },
      "foreground": { "$value": "hsl(24 9.8% 10%)", "$description": "Text on secondary background" }
    },

    "destructive": {
      "DEFAULT": { "$value": "hsl(0 84.2% 40.1%)", "$description": "Destructive actions - red" },
      "foreground": { "$value": "hsl(60 9.1% 97.8%)", "$description": "Text on destructive background" }
    },

    "muted": {
      "DEFAULT": { "$value": "hsl(60 4.8% 95.9%)", "$description": "Muted background" },
      "foreground": { "$value": "hsl(25 5.3% 33.3%)", "$description": "Muted text color" }
    },

    "accent": {
      "DEFAULT": { "$value": "hsl(60 4.8% 95.9%)", "$description": "Accent background" },
      "foreground": { "$value": "hsl(24 9.8% 10%)", "$description": "Text on accent background" }
    },

    "background": { "$value": "hsl(0 0% 100%)", "$description": "Page background" },
    "foreground": { "$value": "hsl(20 14.3% 4.1%)", "$description": "Default text color" },
    "border": { "$value": "hsl(20 5.9% 90%)", "$description": "Border color" },
    "input": { "$value": "hsl(20 5.9% 90%)", "$description": "Input border color" },
    "ring": { "$value": "hsl(24.6 95% 53.1%)", "$description": "Focus ring color" },

    "card": {
      "DEFAULT": { "$value": "hsl(0 0% 100%)", "$description": "Card background" },
      "foreground": { "$value": "hsl(20 14.3% 4.1%)", "$description": "Card text" }
    },

    "popover": {
      "DEFAULT": { "$value": "hsl(0 0% 100%)", "$description": "Popover background" },
      "foreground": { "$value": "hsl(20 14.3% 4.1%)", "$description": "Popover text" }
    },

    "atom": {
      "$description": "Semantic colors for knowledge atom types",
      "problem": { "$value": "hsl(0 84.2% 60.2%)", "$description": "Problem/Issue atoms - red" },
      "solution": { "$value": "hsl(142 76% 36%)", "$description": "Solution atoms - green" },
      "decision": { "$value": "hsl(217 91% 60%)", "$description": "Decision atoms - blue" },
      "question": { "$value": "hsl(43 96% 56%)", "$description": "Question atoms - yellow" },
      "insight": { "$value": "hsl(280 85% 63%)", "$description": "Insight atoms - purple" },
      "pattern": { "$value": "hsl(280 85% 63%)", "$description": "Pattern atoms - purple" },
      "requirement": { "$value": "hsl(217 91% 60%)", "$description": "Requirement atoms - blue" }
    },

    "status": {
      "$description": "Status indicator colors",
      "connected": { "$value": "hsl(142 76% 36%)", "$description": "Connected/Success - green" },
      "validating": { "$value": "hsl(217 91% 60%)", "$description": "Validating/Processing - blue" },
      "pending": { "$value": "hsl(43 96% 56%)", "$description": "Pending/Warning - yellow" },
      "error": { "$value": "hsl(0 84.2% 60.2%)", "$description": "Error/Disconnected - red" }
    },

    "chart": {
      "$description": "Chart visualization colors",
      "1": { "$value": "hsl(12 76% 61%)", "$description": "Chart color 1 - coral" },
      "2": { "$value": "hsl(173 58% 39%)", "$description": "Chart color 2 - teal" },
      "3": { "$value": "hsl(197 37% 24%)", "$description": "Chart color 3 - dark blue" },
      "4": { "$value": "hsl(43 74% 66%)", "$description": "Chart color 4 - gold" },
      "5": { "$value": "hsl(27 87% 67%)", "$description": "Chart color 5 - orange" }
    },

    "heatmap": {
      "$description": "Activity heatmap colors",
      "telegram": { "$value": "hsl(200 80% 50%)", "$description": "Telegram source - blue" },
      "slack": { "$value": "hsl(280 70% 50%)", "$description": "Slack source - purple" },
      "email": { "$value": "hsl(140 70% 45%)", "$description": "Email source - green" }
    },

    "sidebar": {
      "$description": "Sidebar-specific colors",
      "background": { "$value": "hsl(0 0% 98%)", "$description": "Sidebar background" },
      "foreground": { "$value": "hsl(240 5.3% 26.1%)", "$description": "Sidebar text" },
      "primary": { "$value": "hsl(24.6 95% 53.1%)", "$description": "Sidebar primary" },
      "primary-foreground": { "$value": "hsl(0 0% 0%)", "$description": "Sidebar primary text" },
      "accent": { "$value": "hsl(240 4.8% 95.9%)", "$description": "Sidebar accent" },
      "accent-foreground": { "$value": "hsl(240 5.9% 10%)", "$description": "Sidebar accent text" },
      "border": { "$value": "hsl(220 13% 91%)", "$description": "Sidebar border" },
      "ring": { "$value": "hsl(24.6 95% 53.1%)", "$description": "Sidebar focus ring" }
    }
  },

  "spacing": {
    "$type": "dimension",
    "$description": "4px grid-based spacing system",
    "0": { "$value": "0px", "$description": "No spacing" },
    "1": { "$value": "4px", "$description": "Micro spacing" },
    "2": { "$value": "8px", "$description": "Small spacing" },
    "3": { "$value": "12px", "$description": "Medium-small spacing" },
    "4": { "$value": "16px", "$description": "Medium spacing" },
    "5": { "$value": "20px", "$description": "Medium-large spacing" },
    "6": { "$value": "24px", "$description": "Large spacing" },
    "8": { "$value": "32px", "$description": "XL spacing" },
    "10": { "$value": "40px", "$description": "2XL spacing" },
    "12": { "$value": "48px", "$description": "3XL spacing" },
    "16": { "$value": "64px", "$description": "4XL spacing" },
    "20": { "$value": "80px", "$description": "5XL spacing" }
  },

  "borderRadius": {
    "$type": "dimension",
    "$description": "Border radius tokens",
    "none": { "$value": "0px", "$description": "No radius" },
    "sm": { "$value": "4px", "$description": "Small radius" },
    "DEFAULT": { "$value": "6px", "$description": "Default radius" },
    "md": { "$value": "8px", "$description": "Medium radius" },
    "lg": { "$value": "12px", "$description": "Large radius" },
    "xl": { "$value": "16px", "$description": "Extra large radius" },
    "full": { "$value": "9999px", "$description": "Pill shape" }
  },

  "typography": {
    "$description": "Typography scale",

    "fontFamily": {
      "$type": "fontFamily",
      "sans": { "$value": ["Inter", "system-ui", "sans-serif"], "$description": "Primary font" },
      "mono": { "$value": ["JetBrains Mono", "monospace"], "$description": "Monospace font" }
    },

    "fontSize": {
      "$type": "dimension",
      "xs": { "$value": "12px", "$description": "Extra small text" },
      "sm": { "$value": "14px", "$description": "Small text" },
      "base": { "$value": "16px", "$description": "Base text size" },
      "lg": { "$value": "18px", "$description": "Large text" },
      "xl": { "$value": "20px", "$description": "Extra large text" },
      "2xl": { "$value": "24px", "$description": "2X large text" },
      "3xl": { "$value": "30px", "$description": "3X large text" },
      "4xl": { "$value": "36px", "$description": "4X large text" }
    },

    "lineHeight": {
      "$type": "number",
      "tight": { "$value": 1.25, "$description": "Tight line height" },
      "snug": { "$value": 1.375, "$description": "Snug line height" },
      "normal": { "$value": 1.5, "$description": "Normal line height" },
      "relaxed": { "$value": 1.625, "$description": "Relaxed line height" }
    },

    "fontWeight": {
      "$type": "number",
      "normal": { "$value": 400, "$description": "Normal weight" },
      "medium": { "$value": 500, "$description": "Medium weight" },
      "semibold": { "$value": 600, "$description": "Semibold weight" },
      "bold": { "$value": 700, "$description": "Bold weight" }
    }
  },

  "shadow": {
    "$type": "shadow",
    "$description": "Elevation shadows",
    "sm": { "$value": "0 1px 2px 0 rgb(0 0 0 / 0.05)", "$description": "Small shadow" },
    "DEFAULT": { "$value": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)", "$description": "Default shadow" },
    "md": { "$value": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)", "$description": "Medium shadow" },
    "lg": { "$value": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)", "$description": "Large shadow" },
    "xl": { "$value": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)", "$description": "Extra large shadow" },
    "card": { "$value": "0 1px 3px hsl(222.2 47.4% 11.2% / 0.06), 0 1px 2px hsl(222.2 47.4% 11.2% / 0.04)", "$description": "Card shadow" }
  },

  "transition": {
    "$description": "Animation timing",
    "duration": {
      "$type": "duration",
      "instant": { "$value": "75ms", "$description": "Instant feedback" },
      "fast": { "$value": "150ms", "$description": "Fast transitions" },
      "normal": { "$value": "200ms", "$description": "Normal transitions" },
      "slow": { "$value": "300ms", "$description": "Slow transitions" },
      "slower": { "$value": "500ms", "$description": "Slower transitions" }
    },
    "easing": {
      "$type": "cubicBezier",
      "default": { "$value": [0.4, 0, 0.2, 1], "$description": "Default easing" },
      "in": { "$value": [0.4, 0, 1, 1], "$description": "Ease in" },
      "out": { "$value": [0, 0, 0.2, 1], "$description": "Ease out" },
      "inOut": { "$value": [0.4, 0, 0.2, 1], "$description": "Ease in-out" }
    }
  },

  "zIndex": {
    "$type": "number",
    "$description": "Z-index scale",
    "0": { "$value": 0, "$description": "Base layer" },
    "10": { "$value": 10, "$description": "Dropdowns" },
    "20": { "$value": 20, "$description": "Sticky elements" },
    "30": { "$value": 30, "$description": "Fixed elements" },
    "40": { "$value": 40, "$description": "Modal backdrop" },
    "50": { "$value": 50, "$description": "Modal content" },
    "60": { "$value": 60, "$description": "Tooltips" },
    "70": { "$value": 70, "$description": "Toasts" }
  },

  "breakpoint": {
    "$type": "dimension",
    "$description": "Responsive breakpoints",
    "xs": { "$value": "375px", "$description": "Extra small (mobile)" },
    "sm": { "$value": "640px", "$description": "Small (mobile landscape)" },
    "md": { "$value": "768px", "$description": "Medium (tablet)" },
    "lg": { "$value": "1024px", "$description": "Large (laptop)" },
    "xl": { "$value": "1280px", "$description": "Extra large (desktop)" },
    "2xl": { "$value": "1536px", "$description": "2X large (large desktop)" }
  }
}
