# Налаштування Telegram бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# ID груп/чатів для відстеження (через кому, наприклад: -1001234567890,-1009876543210)
TELEGRAM_GROUP_IDS=

# Telegram Client API (для підгрузки історичних повідомлень)
# Отримати на https://my.telegram.org/apps
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
# Session string (згенерувати через scripts/convert_session_to_string.py)
TELEGRAM_SESSION_STRING=

# Налаштування PostgreSQL
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=tasktracker

# Налаштування бази даних
# Для Docker контейнерів (використовує внутрішню мережу):
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/tasktracker
# Для локальної розробки (доступ ззовні):
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5555/tasktracker

# Налаштування Ollama (LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Налаштування логування
LOG_LEVEL=INFO

# Encryption key for LLM provider credentials (Fernet)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Налаштування TaskIQ NATS (черга повідомлень)
TASKIQ_NATS_SERVERS=nats://nats:4222
TASKIQ_NATS_QUEUE=taskiq

# Налаштування frontend (опціонально, якщо не використовуються в docker-compose.yml)
# DASHBOARD_API_BASE_URL=http://localhost:8000
# DASHBOARD_WS_URL=ws://localhost/ws

# Docker Compose Build Performance
# Використовує Docker Buildx Bake для швидшого білду
COMPOSE_BAKE=true
